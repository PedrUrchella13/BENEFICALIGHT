@model IEnumerable<BENEFICALIGHT.Models.Especializacao>

@{
	ViewData["Title"] = "Index";
}
<div style="min-height:100vh">

	<h1>Especialização</h1>

	<p>
		<a asp-action="Create">Adicione</a>
	</p>
	<table class="table">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Nome)
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Nome)
					</td>
					<td>
						<a asp-action="Edit" asp-route-id="@item.EspecializacaoId">Edite</a> |
						<a asp-action="Details" asp-route-id="@item.EspecializacaoId">Detalhes</a> |
						<a asp-action="Delete" asp-route-id="@item.EspecializacaoId">Deletar</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>