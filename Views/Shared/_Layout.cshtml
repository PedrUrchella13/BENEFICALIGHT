<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BENEFICALIGHT</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/BENEFICALIGHT.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BENEFICALIGHT</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="benefica-footer text-light py-5" style="background-color:#23421F">
		<div class="container">

			<div class="row text-center text-md-start">

				<!-- LOGO + SOCIAL -->
				<div class="col-md-3 mb-4">
					<img src="~/img/logo-bl.png" alt="BeneficaLight Logo" style="width:130px;">

					<div class="d-flex justify-content-center justify-content-md-start gap-3 mt-3">
						<a href="#" class="footer-icon"><i class="bi bi-instagram"></i></a>
						<a href="#" class="footer-icon"><i class="bi bi-envelope"></i></a>
						<a href="#" class="footer-icon"><i class="bi bi-linkedin"></i></a>
						<a href="#" class="footer-icon"><i class="bi bi-facebook"></i></a>
					</div>

					<p class="mt-3 fw-bold mb-0">BENEFICALIGHT GROUP®</p>
					<a href="mailto:beneficalight@contato.com" class="text-light small d-block">
						beneficalight@contato.com
					</a>
					<p class="small">(14) 93508-5533</p>
				</div>

				<!-- EXPLORAR -->
				<div class="col-md-3 mb-4">
					<h6 class="fw-bold">EXPLORAR:</h6>
					<p class="mb-1">Tela Inicial</p>
					<p class="mb-1">Receitas</p>
					<p class="mb-1">Nossa História</p>
					<p class="mb-1">Perguntas Frequentes (FAQ)</p>
					<p class="mb-1">Sobre o dispositivo</p>
				</div>

				<!-- EQUIPE -->
				<div class="col-md-3 mb-4">
					<h6 class="fw-bold">EQUIPE:</h6>
					<p class="mb-1">Nosso Objetivo</p>
					<p class="mb-1">Equipe</p>
					<p class="mb-1">Parceiros</p>
					<p class="mb-1">Cronograma</p>
					<p class="mb-1">Resultados e Impacto</p>
				</div>

				<!-- COLABORADORES -->
				<div class="col-md-3 mb-4">
					<h6 class="fw-bold">COLABORADORES:</h6>
					<p class="mb-1">Investidores & Apoio</p>
					<p class="mb-1">Jovens Inovadores Sicredi</p>
					<p class="mb-1">Termos de Uso</p>
					<p class="mb-1">Política de Privacidade</p>
					<p class="mb-1">Acessibilidade</p>

					<h6 class="fw-bold mt-3">CONTATOS:</h6>
					<p class="small">Endereço: Rua Exemplo, 000 – Cidade/UF</p>
					<p class="small">Redes Sociais:</p>
					<ul class="small ps-3">
						<li>Instagram</li>
						<li>LinkedIn</li>
					</ul>
				</div>
			</div>

			<p class="text-center mt-4 small">
				BENEFICALIGHT GROUP® – todos os direitos reservados
			</p>

		</div>

	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
